    <ControlTemplate x:Key="Item"
                     >
        <Image
       Source="{Binding CellViewModel.SpriteImagePath,TargetNullValue={x:Null}}" 
       Name="itemImage"
       RenderOptions.BitmapScalingMode="Fant"
       Stretch="Fill"
       VerticalAlignment="Top"
       Margin="0,0,0,0"
       HorizontalAlignment="Center" 
       Width="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Grid}},Path=ActualWidth}"
       Height="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Grid}},Path=ActualHeight}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown" >
                    <i:InvokeCommandAction Command="{Binding CellViewModel.DisplayDetailWindowCommand}" CommandParameter="{Binding CellViewModel.Element.Key,TargetNullValue={x:Null}}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseLeftButtonDown" >
                    <i:InvokeCommandAction Command="{Binding CellViewModel.DisplayDetailWindowCommand}" CommandParameter="{Binding CellViewModel.Element.Key,TargetNullValue={x:Null}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Image>
    </ControlTemplate>





